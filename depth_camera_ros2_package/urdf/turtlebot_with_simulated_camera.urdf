<robot name="turtlebot_camera">
  <!-- TurtleBot Base -->
  <include filename="package://turtlebot_arm/urdf/turtlebot_arm.urdf" />

  <!-- Simulated Depth Camera -->
  <link name="camera_link">
    <inertial>
      <mass value="0.1" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
    </inertial>
    <visual>
      <geometry>
        <box size="0.05 0.05 0.1" />
      </geometry>
      <origin xyz="0 0 0.05" />
      <material name="blue" />
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link" />
    <child link="camera_link" />
    <origin xyz="0 0 0.5" />
  </joint>

  <!-- Gazebo Plugin for Simulated Depth Camera -->
  <gazebo>
    <sensor type="depth" name="camera_sensor">
      <pose>0 0 0.05 0 0 0</pose>
      <plugin name="depth_camera_plugin" filename="libgazebo_ros_depth_camera.so">
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <camera_name>depth_camera</camera_name>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>10.0</far>
        </clip>
        <point_cloud>true</point_cloud>
      </plugin>
    </sensor>
  </gazebo>
</robot>
